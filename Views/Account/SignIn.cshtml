@model SelcukDemo.ViewModels.SignInViewModel_

@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;  // Bu sayfa için genel layout kullanılmıyor
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap - CoreUI</title>

    <!-- CoreUI CSS -->
    <link rel="stylesheet" href="~/css/style.css">
</head>
<body class="bg-body-tertiary min-vh-100 d-flex flex-row align-items-center">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card-group d-block d-md-flex row">
                    <div class="card col-md-7 p-4 mb-0">
                        <div class="card-body">
                            <h1>Giriş Yap</h1>
                            <p class="text-body-secondary">Hesabınıza giriş yapın</p>

                            @if (TempData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
                            }

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>
                            }

                            <form asp-action="SignIn" method="post">
                                <div class="input-group mb-3">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                           <use xlink:href="@Url.Content("~/assets/icons/sprites/free.svg#cil-user")"></use>

                                        </svg>
                                    </span>
                                    <input asp-for="Email" class="form-control" placeholder="Email" required>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="input-group mb-4">
                                    <span class="input-group-text">
                                        <svg class="icon">
                                           <use xlink:href="@Url.Content("~/assets/icons/sprites/free.svg#cil-lock-locked")"></use>

                                        </svg>
                                    </span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" required>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-6">
                                        <button type="submit" class="btn btn-primary px-4">Giriş Yap</button>
                                    </div>
                                    <div class="col-6 text-end">
                                        <a href="@Url.Action("ForgotPassword", "Account")" class="btn btn-link px-0">Şifremi unuttum?</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="card col-md-5 text-white bg-primary py-5">
                        <div class="card-body text-center">
                            <div>
                                <h2>Üye Ol</h2>
                                <p>Yeni bir hesap oluşturun ve sistemimize erişin.</p>
                                <a href="@Url.Action("SignUp", "Account")" class="btn btn-lg btn-outline-light mt-3">Hemen Kaydol!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CoreUI JS -->
    <script src="~/js/coreui.bundle.min.js"></script>
</body>
</html>
