@model SelcukDemo.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null; // Sayfa layout kullanmasın
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Kayıt Ol - CoreUI</title>

    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body class="bg-body-tertiary min-vh-100 d-flex flex-row align-items-center">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mb-4 mx-4">
                <div class="card-body p-4">
                    <h1>Kayıt Ol</h1>
                    <p class="text-body-secondary">Hesabınızı oluşturun</p>
                    
                    <!-- Butonlar -->
                    <div class="text-center mb-4">
                        <button id="studentBtn" class="btn btn-primary btn-lg me-2">Öğrenci Kaydı</button>
                        <button id="teacherBtn" class="btn btn-success btn-lg">Öğretmen Kaydı</button>
                    </div>

                    <!-- Öğrenci Kaydı Formu -->
                    <div id="studentForm" style="display:none;">
                        <form asp-action="RegisterStudent" method="post">
                            @Html.Partial("_RegisterForm", Model)
                            <button type="submit" class="btn btn-primary w-100">Kayıt Ol (Öğrenci)</button>
                        </form>
                    </div>

                    <!-- Öğretmen Kaydı Formu -->
                    <div id="teacherForm" style="display:none;">
                        <form asp-action="RegisterTeacher" method="post">
                            @Html.Partial("_RegisterForm", Model)
                            <button type="submit" class="btn btn-success w-100">Kayıt Ol (Öğretmen)</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("studentBtn").addEventListener("click", function () {
        document.getElementById("studentForm").style.display = "block";
        document.getElementById("teacherForm").style.display = "none";
    });

    document.getElementById("teacherBtn").addEventListener("click", function () {
        document.getElementById("teacherForm").style.display = "block";
        document.getElementById("studentForm").style.display = "none";
    });
</script>

<script src="~/js/coreui.bundle.min.js"></script>
</body>
</html>
