@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-container">
    <h1 class="hero-title">Sayfama Hoşgeldiniz.</h1>
    <p class="hero-subtitle">Sizlere en iyi deneyimi sunmak için buradayız.</p>
</div>

<style>
    body {
        background-color: #ffffff !important; /* Tüm sayfa beyaz */
        color: #333;
        font-family: 'Segoe UI', sans-serif;
        margin: 0;
    }

    .hero-container {
        padding: 60px 30px;
        margin: 40px auto;
        max-width: 800px;
        background-color: #f8f9fa;
        border-radius: 16px;
        box-shadow: 0px 2px 12px rgba(0, 0, 0, 0.05);
        text-align: center;
    }

    .hero-title {
        font-size: 3rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 20px;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: #6c757d;
    }

    /* Header çizgisi */
    header, .header {
        border-bottom: 1px solid #000;
        background-color: #fff !important;
    }

    /* Sayfa içeriği alanı da beyaz kalsın */
    .body {
        background-color: #fff !important;
    }
</style>
