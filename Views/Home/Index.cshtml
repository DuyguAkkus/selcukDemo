@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-container">
    <h1 class="hero-title">Sayfama Hoşgeldiniz.</h1>
    <p class="hero-subtitle">Sizlere en iyi deneyimi sunmak için buradayız.</p>
</div>

<style>
    /* Pembe dalga animasyonlu arka plan */
    body {
        background: linear-gradient(270deg, #ff69b4, #ff85c2, #ffaad4, #ff69b4);
        background-size: 400% 400%;
        animation: waveBG 6s ease infinite;
        color: white;
        font-family: 'Arial', sans-serif;
        text-align: center;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Dalgalı arka plan animasyonu */
   @@keyframes waveBG {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    /* Hero bölümünü ortala */
    .hero-container {
        padding: 20px;
        border-radius: 15px;
        background: rgba(255, 105, 180, 0.2); /* Hafif pembe saydam kutu */
        box-shadow: 0px 0px 20px rgba(255, 105, 180, 0.5);
        animation: waveBox 4s infinite ease-in-out;
    }

    /* Dalgalı hareket efekti */
    @@keyframes waveBox {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(10px);
        }
        100% {
            transform: translateY(0px);
        }
    }

    /* Başlık tasarımı */
    .hero-title {
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 3px 3px 6px rgba(255, 105, 180, 0.5);
        animation: fadeIn 1.5s ease-in-out;
    }

    /* Alt başlık tasarımı */
    .hero-subtitle {
        font-size: 1.5rem;
        margin-top: 10px;
        opacity: 0.9;
        animation: fadeIn 2s ease-in-out;
    }

    /* Fade-in animasyonu */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
