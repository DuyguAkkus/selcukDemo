@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-container">
    <h1 class="hero-title">Sayfama Hoşgeldiniz.</h1>
    <p class="hero-subtitle">Sizlere en iyi deneyimi sunmak için buradayız.</p>
</div>

<style>
    body {
        background: linear-gradient(270deg, #5c5cd6, #6a6ae0, #7b7bf0, #5c5cd6);
        background-size: 300% 300%;
        animation: waveBG 14s ease-in-out infinite;
        color: white;
        font-family: 'Arial', sans-serif;
        text-align: center;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    @@keyframes waveBG {
        0% {
            background-position: 0% 50%;
        }
        50% {
            background-position: 100% 50%;
        }
        100% {
            background-position: 0% 50%;
        }
    }

    .hero-container {
        padding: 30px;
        border-radius: 15px;
        background: rgba(92, 92, 214, 0.15); /* #5c5cd6 saydam */
        box-shadow: 0px 0px 20px rgba(92, 92, 214, 0.4);
        animation: waveBox 10s infinite ease-in-out;
    }

    @@keyframes waveBox {
        0% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(5px);
        }
        100% {
            transform: translateY(0px);
        }
    }

    .hero-title {
        font-size: 3rem;
        font-weight: bold;
        text-shadow: 2px 2px 6px rgba(92, 92, 214, 0.5);
        animation: fadeIn 1.5s ease-in-out;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        margin-top: 10px;
        opacity: 0.95;
        animation: fadeIn 2.2s ease-in-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
