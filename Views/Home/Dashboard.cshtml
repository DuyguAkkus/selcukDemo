@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-lg px-4">
    <!-- Dashboard Cards -->
    <div class="row g-4 mb-4">
        <!-- Toplam Kullanıcı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-primary" style="height: 160px;">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="fs-3 fw-semibold">134</div>
                    <div class="fs-5">Toplam Kullanıcı</div>
                </div>
            </div>
        </div>

        <!-- Aktif Kullanıcı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-success" style="height: 160px;">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="fs-3 fw-semibold">97</div>
                    <div class="fs-5">Aktif Kullanıcı</div>
                </div>
            </div>
        </div>

        <!-- Pasif Kullanıcı -->
        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-warning" style="height: 160px;">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="fs-3 fw-semibold">37</div>
                    <div class="fs-5">Pasif Kullanıcı</div>
                </div>
            </div>
        </div>

        <!-- Bugünkü Girişler -->
        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-danger" style="height: 160px;">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="fs-3 fw-semibold">18</div>
                    <div class="fs-5">Bugünkü Giriş</div>
                </div>
            </div>
        </div>
    </div>

    <!-- İlerleme Durumu -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">İlerleme Durumu</h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle text-nowrap">
                    <thead>
                    <tr>
                        <th>Kategori</th>
                        <th>Toplam</th>
                        <th>İlerleme</th>
                        <th>Durum</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>Dersler</td>
                        <td>20</td>
                        <td>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-success" style="width: 75%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-success">%75 Tamamlandı</span></td>
                    </tr>
                    <tr>
                        <td>Projeler</td>
                        <td>5</td>
                        <td>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-info" style="width: 40%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-info">%40 Devam</span></td>
                    </tr>
                    <tr>
                        <td>Sertifikalar</td>
                        <td>3</td>
                        <td>
                            <div class="progress progress-thin">
                                <div class="progress-bar bg-warning" style="width: 100%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-warning text-dark">Tamamlandı</span></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Son Girişler -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Son Girişler</h4>
            <div class="table-responsive">
                <table class="table table-hover align-middle text-nowrap">
                    <thead>
                    <tr>
                        <th>Kullanıcı</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th>Son Giriş</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>AdminUser</td>
                        <td>admin@demo.com</td>
                        <td><span class="badge bg-primary">Admin</span></td>
                        <td>5 dakika önce</td>
                    </tr>
                    <tr>
                        <td>duygum</td>
                        <td>duygum@gmail.com</td>
                        <td><span class="badge bg-secondary">Student</span></td>
                        <td>2 saat önce</td>
                    </tr>
                    <tr>
                        <td>egitmen</td>
                        <td>egitmen@edu.tr</td>
                        <td><span class="badge bg-warning text-dark">Teacher</span></td>
                        <td>Dün</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
